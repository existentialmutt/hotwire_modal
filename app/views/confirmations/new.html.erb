<%= turbo_frame_tag "modal" do %>
  <%= render ModalComponent.new do %>
    <h2>Terms of Service</h2>
    <div class="card mb-4">
      <div class="card-body">
        Lorem ipsum dolor sit amet consectetur adipisicing, elit. Amet, voluptas tempora dolores, beatae asperiores ipsum a nemo nisi nobis nesciunt possimus eos quo fuga aperiam temporibus doloremque dolorem, voluptatem officia.
      </div>
    </div>

    <%= form_with model: @confirmation do |f| %>
      <div class="form-check">
        <%= f.check_box :tos, class: "form-check-input" %>
        <%= f.label :tos, "I accept the terms of service", class: "form-check-label" %>
        <%- if @confirmation.errors.include?(:tos) %>
          <div class="form-text text-danger">Please check the box</div>
        <%- end %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <%- end %>
  <%- end %>
<%- end %>
